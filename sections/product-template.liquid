.switch_stock {
  position: relative;
  display: inline-block;
  width: 60px;
  height: 34px;
}

.switch_stock input { 
  opacity: 0;
  width: 0;
  height: 0;
}

.slider_stock {
  position: absolute;
  cursor: pointer;
  top: 5px;
  left: 0px;
  right: 0px;
  bottom: 3px;
  background-color: #ccc;
  -webkit-transition: .4s;
  transition: .4s;
}

.custom_slider_stock {
  background-color: #53809f;
}

span.slider_stock.round.custom_slider_stock:before {
    background: #53809f;
}

.slider_stock:before {
  position: absolute;
  content: "";
  height: 20px;
  width: 20px;
  left: 2px;
  bottom: 3px;
 background-color: #fff;
  -webkit-transition: .4s;
  transition: .4s;
}
