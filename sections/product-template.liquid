    background: #6C2391;
}

input:focus + .slider_stock {
  box-shadow: 0 0 1px #2196F3;
}

input:checked + .slider_stock {
  background-color: #6C2391;
}

input:checked + .slider_stock:before {
  -webkit-transform: translateX(26px);
  -ms-transform: translateX(26px);
  transform: translateX(26px);
}

/* Rounded sliders */
.slider_stock.round {
  border-radius: 34px;
}

.slider_stock.round:before {
  border-radius: 50%;
}
